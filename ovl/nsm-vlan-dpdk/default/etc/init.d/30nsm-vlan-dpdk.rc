#! /bin/sh
. /etc/profile
die() {
	echo "$@"
	exit 1
}

hostname | grep -Eq 'vm-[0-9]+$' || die "Invalid hostname [$(hostname)]"
i=$(hostname | cut -d- -f2 | sed -re 's,^0+,,')

vm() {
	modprobe vfio-pci
	modprobe e1000
	d=/dev/hugepages
	mkdir -p $d
	mount -t hugetlbfs nodev $d
}

router() {
	return 0
}

tester() {
	return 0
}

case $(hostname) in
	vm-0*)
		vm;;
	vm-20*)
		router;;
	vm-22*)
		tester;;
esac
